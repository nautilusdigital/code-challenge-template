generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserType {
  id    String @id(map: "user_types_pk") @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name  String @db.VarChar(16)
  users User[]

  @@map("user_types")
}

model User {
  id         String   @id(map: "users_pk") @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  firstName  String   @map("first_name") @db.VarChar(128)
  lastName   String   @map("last_name") @db.VarChar(128)
  email      String   @db.VarChar(256)
  password   String   @db.VarChar(256)
  userTypeId String   @map("user_type_id") @db.Uuid
  createdAt  DateTime @default(dbgenerated("CURRENT_DATE")) @map("created_at") @db.Date
  userType   UserType @relation(fields: [userTypeId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "users_user_types_id_fk")

  @@map("users")
}

model ExmapleSelectUtils {
  id   String @id(map: "exmaple_select_utils_pk") @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name String @db.VarChar(256)
}
